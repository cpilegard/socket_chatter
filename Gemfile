source :rubygems

# PostgreSQL driver
gem 'pg'

# Sinatra driver
gem 'sinatra', require: 'sinatra/base'
gem 'sinatra-contrib'

# Use Thin for our web server
gem 'thin'

gem 'activesupport'
gem 'activerecord'

gem 'rake'

gem 'shotgun'

gem 'rest-client'

group :test do
  gem 'faker'
  gem 'rspec'
end
